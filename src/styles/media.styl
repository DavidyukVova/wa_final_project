@media screen and (max-width: 1460px) {
  .nav-bar .nav-bar__nav li {
    display block;
    margin-left 100px
  }
  .logotype {
    top 150px
  }
  .subscribe-nav {
    margin-top 60px
  }
  .switch-block {
    top 1000px
  }
  .group {
    margin 20px
  }
}

@media screen and (max-width: 1368px) {
  .line:after {
    display none
  }
  .line:before {
     display none
   }

  .third-block .line1:after {
    display none
  }
  .third-block .line1:before {
    display none
  }
}

@media screen and (max-width: 1308px) {
  .third-block__container{
    display block
    width 100%
  }
  .brand {
    max-width 200px
    margin 0 auto
    padding 40px
  }
}

@media screen and (max-width: 1250px) {
  .subscribe-nav {
    display none
  }
}

@media screen and (max-width: 1225px){
  .fourth__content-text {
    max-width 200px
  }
  .white {
    font-size 14px
  }
  .fourth__content-text h2{
    font-size 24px
  }
}

@media screen and (max-width: 1104px) {
  .search input {
    max-width 85%
  }
}

@media screen and (max-width: 1054px) {
  .footer-content__left .column {
    padding-right 5px
  }
  .footer-content__left .column a {
    font-size 12px

  }
  .footer-content__left .column h2 {
    font-size 13px
  }
}

@media screen and (max-width: 1024px) {
  .fourth__content-text {
    max-width 165px
  }
}

@media screen and (max-width: 955px) {
  .fourth__content {
    padding 50px 10px
  }
}

@media screen and (max-width: 875px) {
  .fourth__content {
    height 600px
  }
  .fourth__content-left .left-block {
    display block
    padding 10px
  }
  .fourth__content-right .right-block {
    display block
    padding 10px
  }
}

@media screen and (max-width: 815px) {
  .footer-content__left .column {
    display block
    margin-left 50px
  }
  .search button {
    font-size 11px
    padding 8px 2px
  }
}

@media screen and (max-width: 660px) {
  .search button {
    top 85px
  }
}

@media screen and (max-width: 577px) {
  .fourth__content {
    height 1100px
  }
}

@media screen and (max-width: 497px) {
  .footer-content__right {
    margin-left 50px
    float none
  }
}