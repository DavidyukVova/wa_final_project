/* SLIDER */

.slider__container
  height: 100vh;
  min-height: 360px;
  background: url(../assets/images/slider_1.gif) center center no-repeat;
  background-size: cover;
  position relative

/* BOX-CONTAINER */

.slider__content
  width 275px
  margin 0 auto
  border 2px solid white
  text-align center
  position absolute
  top 140px
  left 42%

.slider__border
  border 1px solid white
  margin 7px
  padding 30px 0

.slider__container .row1
  font-size: 30px;
  font-family: "Lato";
  color: rgb( 255, 255, 255 );
  text-transform uppercase


.slider__container .row2
  font-size: 90.028px;
  font-family: "Lato";
  color: rgb( 0, 0, 0 );
  text-transform uppercase

.slider__container .row3
  font-size: 30px;
  font-family: "Lato";
  color: rgb( 255, 255, 255 );
  position relative
  text-transform uppercase

.slider__container .row4
  font-size: 48px;
  font-family: "Lato";
  color: rgb( 0, 0, 0 );
  text-transform uppercase

.left-bottom
  position absolute
  bottom 98px
  left 20px

.right-bottom
  position absolute
  bottom 98px
  right 20px

.left-top
  position absolute
  bottom 107px
  left 47px

.right-top
  position absolute
  bottom 107px
  right 47px

/* BUTTON */

.button-slider .btn
  font-size: 24px;
  font-family: "Lato";
  background-color: rgb( 240, 157, 102 );
  color: rgb( 255, 255, 255 );
  border none
  position: absolute;
  left 44%
  top: 520px;
  text-align: center;
  cursor pointer
  width: 190px;
  height: 52px;

.button-slider .btn:hover
  background-color: rgb(244, 125, 46);

/* SWITCH */
.switch-block
  position absolute
  top 800px
  left 44.5%
  max-width 180px
  display flex

.switch__control
  background-color: rgb( 178, 178, 178 );
  margin 10px
  transform rotate(45deg)
  width: 19px;
  height: 19px;
  cursor pointer

.switch__control:hover
  background-color: rgb( 0, 0, 0 );
